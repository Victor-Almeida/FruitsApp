<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/fruitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dollarTextView"
        android:layout_marginTop="72dp"
        android:text="Fruit name"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dollarTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/infoTextView"
        android:layout_marginTop="117dp"
        android:text="US$"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/realTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dollarTextView"
        android:layout_marginTop="162dp"
        android:text="R$"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fruitImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="*Considering US$1.00 as R$3.50"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/fruitImageView"
        android:layout_width="157dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fruitTextView"
        android:layout_marginStart="22dp"
        android:contentDescription="fruit" />


</RelativeLayout>